@model CurriculumWeb.Models.Contacto
@{
    Layout = null;
}

<!DOCTYPE html>
<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <header class="jumbotron text-center">
        <h1>Contacto</h1>
    </header>
    <main class="container">
        <form method="post" class="w-50">
            <div class="form-group">
                <label asp-for="Nombre">Nombre: </label>
                <input asp-for="Nombre" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Apellido">Apellido: </label>
                <input asp-for="Apellido" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email">Email: </label>
                <input type="email" asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Mensaje">Mensaje: </label>
                <textarea type="text" asp-for="Mensaje" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary">Enviar</button>
            </div>
        </form>
    </main>
</body>

